{
  "name": "@sistemas-fsa/authz",
  "version": "1.0.0",
  "description": "Standard AuthZ (Keycloak + JOSE) for NestJS and Express",
  "license": "MIT",
  "author": "Gonzalo Billia",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./nest": {
      "import": "./dist/nest/index.js",
      "require": "./dist/nest/index.cjs",
      "types": "./dist/nest/index.d.ts"
    },
    "./express": {
      "import": "./dist/express/index.js",
      "require": "./dist/express/index.cjs",
      "types": "./dist/express/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup src/index.ts src/nest/index.ts src/express/index.ts --format esm,cjs --dts --clean --splitting=false",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "express": ">=4",
    "reflect-metadata": "^0.2.0"
  }
}
