{
  "name": "@sistemas-fsa/authz",
  "version": "1.0.0",
  "description": "AuthN/Z toolkit for NestJS & Express (Keycloak + JOSE)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./nest": {
      "import": "./dist/nest/index.js",
      "require": "./dist/nest/index.cjs"
    },
    "./express": {
      "import": "./dist/express/index.js",
      "require": "./dist/express/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/nest/index.ts src/express/index.ts --format esm,cjs --dts --clean --splitting=false",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "jose": "^5.2.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "express": ">=4",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
